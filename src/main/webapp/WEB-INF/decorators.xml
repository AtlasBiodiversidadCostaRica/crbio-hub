<?xml version="1.0" encoding="ISO-8859-1"?>
<decorators defaultdir="/WEB-INF/decorators">
    <excludes>
        <pattern>/styles/*</pattern>
        <pattern>/scripts/*</pattern>
        <pattern>/images/*</pattern>
        <pattern>/ajax/*</pattern>
        <pattern>/css/*</pattern>
        <pattern>/static/*</pattern>
        <pattern>/occurrences/*/assertions/</pattern>
        <pattern>/occurrences/*/groupedAssertions/</pattern>
        <pattern>/index</pattern>
    </excludes>

    <decorator name="bare" page="bare-skin.jsp">
        <pattern>/occurrences/fragment/*</pattern>
        <pattern>/occurrences/annotate/*</pattern>
    </decorator>

    <decorator name="ala" page="/WEB-INF/decorators/ala-skin.jsp" />
    <decorator name="ozcam" page="/WEB-INF/decorators/ozcam-skin.jsp" />
    
    <decorator name="main" page="ala-skin.jsp">
        <pattern>/*</pattern>
    </decorator>


</decorators>
